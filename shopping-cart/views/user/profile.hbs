<div class="row">
    <div class="col-md-8 offset-md-2">
        {{#each orders}}
        <div class="card h-100">
              {{!-- <a href="#"><img class="card-img-top" src={{ this.imagePath }} alt=""></a> --}}
              <div class="card-body">
                
                   <ul class="list-group">
                       {{#each this.items}}
                        <li class="list-group-item">
                        <strong>{{this.item.title}}</strong>&emsp;
                        <span class="badge badge-success">${{this.price}}</span>&emsp;
                        <span class="badge badge-pill badge-success" style="float:right;margin-top: 10px">{{this.qty}}</span>

                        </li>
                      {{/each}}
                    </ul>

               </div>
              
              <div class="card-footer">
                <small class="text-muted">{{this.cart.totalPrice}}</small>
              </div>
            </div>
            {{/each}}
    </div>
</div>